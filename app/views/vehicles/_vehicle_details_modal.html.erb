<div class="modal fade" id="vehicleDetailsModal" tabindex="-1" aria-labelledby="vehicleDetailsModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <div>
          <h1 class="modal-title fs-5" id="vehicleDetailsModalLabel">基本情報を編集</h1>
          <p class="mb-0 text-muted small">変更すると即座に一覧や詳細へ反映されます。</p>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>
      <%= form_with model: @vehicle, url: vehicle_path(@vehicle), method: :patch, local: true, class: "modal-body bg-light d-flex flex-column gap-3" do |f| %>
        <div class="row g-3">
          <div class="col-md-6">
            <label class="form-label small text-muted">営業所</label>
            <%= f.text_field :depot_name, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">登録番号</label>
            <%= f.text_field :registration_number, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">呼称</label>
            <%= f.text_field :call_sign, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">初度登録</label>
            <%= f.date_field :first_registration_on, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">型式</label>
            <%= f.text_field :model_code, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">メーカー</label>
            <%= f.text_field :manufacturer_name, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">種別</label>
            <%= f.text_field :vehicle_category, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">タンク材質 / 用途</label>
            <%= f.text_field :tank_material, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">荷主</label>
            <%= f.text_field :shipper_name, class: "form-control form-control-sm" %>
          </div>
          <div class="col-md-6">
            <label class="form-label small text-muted">輸送品名</label>
            <%= f.text_field :cargo_name, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div>
          <label class="form-label small text-muted">備考</label>
          <%= f.text_area :notes, rows: 4, class: "form-control form-control-sm" %>
        </div>
        <div class="text-end">
          <button type="button" class="btn btn-outline-secondary me-2" data-bs-dismiss="modal">キャンセル</button>
          <%= f.submit "保存する", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
