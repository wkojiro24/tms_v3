<%= form_with model: [:admin, job_position], local: true do |f| %>
  <% if job_position.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% job_position.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :code, "コード", class: "form-label" %>
    <%= f.text_field :code, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :name, "名称", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="mb-3">
    <%= f.label :grade, "グレード", class: "form-label" %>
    <%= f.number_field :grade, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :description, "説明", class: "form-label" %>
    <%= f.text_area :description, rows: 3, class: "form-control" %>
  </div>
  <div class="form-check form-switch mb-3">
    <%= f.check_box :active, class: "form-check-input" %>
    <%= f.label :active, "有効", class: "form-check-label" %>
  </div>
  <%= f.submit(job_position.persisted? ? "更新" : "登録", class: "btn btn-primary") %>
<% end %>
