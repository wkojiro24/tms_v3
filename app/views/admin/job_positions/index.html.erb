<% content_for :title, "役職マスタ" %>
<% content_for :section_label, "マスタ管理" %>

<div class="row g-4">
  <div class="col-lg-5">
    <div class="card card-lift">
      <div class="card-body">
        <h2 class="h5 mb-3">新規登録</h2>
        <%= render "form", job_position: @job_position %>
      </div>
    </div>
  </div>

  <div class="col-lg-7">
    <div class="card card-lift">
      <div class="card-body">
        <h2 class="h5 mb-3">役職一覧</h2>
        <table class="table table-sm align-middle">
          <thead>
            <tr>
              <th>コード</th>
              <th>名称</th>
              <th>グレード</th>
              <th>状態</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @job_positions.each do |position| %>
              <tr>
                <td><%= position.code %></td>
                <td><%= position.name %></td>
                <td><%= position.grade %></td>
                <td><span class="badge <%= position.active? ? 'bg-success' : 'bg-secondary' %>"><%= position.active? ? "有効" : "無効" %></span></td>
                <td class="text-end">
                  <%= link_to "編集", edit_admin_job_position_path(position), class: "btn btn-outline-primary btn-sm" %>
                  <%= link_to "削除", admin_job_position_path(position), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-outline-danger btn-sm" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
