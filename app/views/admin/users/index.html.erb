<% content_for :title, "ユーザー管理" %>
<% content_for :section_label, "承認管理" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="h5 mb-0">ユーザー一覧</h2>
  <%= link_to "ユーザー追加", new_admin_user_path, class: "btn btn-primary btn-sm" %>
</div>

<div class="card card-lift">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-sm align-middle">
        <thead>
          <tr>
            <th>メールアドレス</th>
            <th>ロール</th>
            <th>作成日</th>
            <th>最終更新</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><span class="badge <%= user.admin_role? ? 'bg-success' : 'bg-secondary' %>"><%= user.role %></span></td>
              <td><%= l(user.created_at, format: :short) %></td>
              <td><%= l(user.updated_at, format: :short) %></td>
              <td class="text-end">
                <%= link_to "編集", edit_admin_user_path(user), class: "btn btn-outline-secondary btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
