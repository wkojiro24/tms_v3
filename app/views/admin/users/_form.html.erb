<%= form_with model: [:admin, @user], local: true do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <strong>入力内容に誤りがあります。</strong>
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% password_required = !@user.persisted? %>

  <div class="row g-3">
    <div class="col-md-6">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>
    <div class="col-md-6">
      <%= f.label :role, "ロール", class: "form-label" %>
      <%= f.select :role, User.roles.keys.map { |r| [r.humanize, r] }, {}, class: "form-select" %>
    </div>
    <div class="col-md-6">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: password_required %>
      <% if @user.persisted? %>
        <div class="form-text">変更しない場合は空欄のままにしてください。</div>
      <% end %>
    </div>
    <div class="col-md-6">
      <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="d-flex justify-content-end gap-2 mt-4">
    <%= link_to "一覧へ戻る", admin_users_path, class: "btn btn-outline-secondary" %>
    <%= f.submit(@user.persisted? ? "更新する" : "登録する", class: "btn btn-primary") %>
  </div>
<% end %>
