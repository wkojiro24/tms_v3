<%= form_with model: [ :admin, @category, @item ], local: true do |f| %>
  <div class="mb-3">
    <%= f.label :display_label, "表示ラベル", class: "form-label" %>
    <%= f.text_field :display_label, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :source_label_text, "集計対象 (1行につき1つ)", class: "form-label" %>
    <%= f.text_area :source_label_text, class: "form-control", rows: 6, placeholder: "減価償却\n自動車税" %>
  </div>
  <div class="mb-3">
    <%= f.label :position, "表示順", class: "form-label" %>
    <%= f.number_field :position, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
  <%= link_to "戻る", edit_admin_metric_category_path(@category), class: "btn btn-link" %>
<% end %>
